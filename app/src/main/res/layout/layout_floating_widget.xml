<?xml version="1.0" encoding="utf-8"?>
<com.android.captureinterfacexposed.ui.view.DraggableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_blue"
            android:contentDescription="@string/floating_button_iv_first"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="36dp"/>

        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_green"
            android:contentDescription="@string/floating_button_iv_second"/>

    </LinearLayout>

</com.android.captureinterfacexposed.ui.view.DraggableLinearLayout>
